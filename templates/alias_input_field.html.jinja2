<div class="form-floating">
    <input
            id="aliasInput"
            name="mailbox"
            type="text"
            class="form-control"
            placeholder="Mailbox alias"
            required
            {% if random_word %}
                value="{{ random_word }}"
            {% endif %}
            aria-label="Mailbox alias"
            aria-describedby="button-random-alias">
    <label for="aliasInput">Mailbox alias</label>
</div>