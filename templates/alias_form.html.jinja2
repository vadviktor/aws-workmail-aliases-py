<form action="/alias/create" method="post" class="pb-3">
    {% include 'alias_input.html.jinja2' %}

    <div class="row mt-3 ">
        <div class="col-auto me-auto">
            <select id="domainSelect" name="domain" class="form-select" required>
                <option selected value="">-- Select a domain --</option>
                {% for domain in domains %}
                    <option value="{{ domain }}">{{ domain }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="col">
            <button class="btn btn-primary" type="submit">Create</button>
        </div>
    </div>
</form>