<div class="row gy-2">
    <div id="alias-input-container"
         class="col-12 col-md-6 col-lg-7 col-xl-8">
        {% include 'alias_input_field.html.jinja2' %}
    </div>

    <div class="col-4 col-md-2">
        <div class="form-floating">
            <input
                    id="aliasLengthInput"
                    name="alias-length"
                    type="number"
                    min="8"
                    max="32"
                    value="16"
                    class="form-control"
                    placeholder="16"
                    aria-label="Alias length"
                    aria-describedby="button-random-alias">
            <label for="aliasLengthInput">Alias length</label>
        </div>
    </div>

    <div class="col">
        <button
                class="btn btn-outline-secondary text-nowrap"
                type="button"
                id="button-random-alias"
                hx-patch="/random_word"
                hx-target="#alias-input-container">
            <i class="bi-shuffle" aria-label="Randomize"></i>
            Randomize
        </button>
    </div>
</div>